maincolor = #f80
lightcolor = bisque

html
  height 100%

body
  font-family Roboto
  font-size 14px
  background linear-gradient(90deg, rgba(0,0,0,0.6) 40%, rgba(0,0,0,0)), url("/wp-content/uploads/2018/08/back.jpg")
  @media screen and (max-width 600px)
    background linear-gradient(180deg, rgba(0,0,0,0.6) 70%, rgba(0,0,0,0)), url("/wp-content/uploads/2018/08/back.jpg")
    background-size cover
    background-position 70% 50%
  background-size cover
  background-position 70% 50% hui
  display flex
  justify-content space-around
  background-attachment fixed
  overflow-y scroll


.fill
  display flex
  height 100%
  align-items center
.col
  padding-left: 5px;
  flex-grow 1
  display flex
  flex-direction column
  position relative
.row
  display flex
  flex-direction row
  flex-wrap wrap
  position relative
.center
  align-items center
.nowrap
  flex-wrap nowrap




.face
  display flex
  flex-grow 1
  margin 60px 20px 0px 20px
  color white
  margin-right 20px
  border-radius 2px
  &__label
    font-size: 60px
    max-width: 400


.order
  display flex
  flex-direction column
  background-color #fff
  border 2px solid maincolor
  border-radius 15px
  padding 10px
  width 90%
  margin-top 20px
  overflow hidden
  height 0px
  display none
  align-self: center;
  &__container
    display flex
    flex-direction column
    flex-wrap nowrap
    flex-grow 1
    overflow hidden
    min-width 50%
  &__select
    padding 80px 0
    color #fff
    justify-content center
    cursor pointer
  &__clickbait
    -webkit-touch-callout: none;
    -webkit-user-select: none; /* Webkit */
    -moz-user-select: none;    /* Firefox */
    -ms-user-select: none;     /* IE 10  */
    -o-user-select: none;
    user-select: none;  
    color #fff
    background rgba(0,0,0,0.4)
    border 2px solid
    border-radius 15px
    padding 0 10px 10px 10px
    margin 10px
    display flex
    flex-direction column
    & img
      width 200px
      height 200px
    &[data-selected='true']
      color maincolor
    &:hover
      color maincolor
  & input[type='text']
    border 1px solid maincolor
    display block
    height 30px
    width auto
    border-radius 2px
    &:focus
      color black
  &__label
    padding 5px 0 5px 0
    font-weight 600
    text-align center
  &__check
    padding-bottom 4px
    font-size 12px
  &__send
    height 60px
    width 200px
    min-width 200px
    max-width 200px
    border-radius 20px
    border 1px solid maincolor
    font-size 20px
    font-weight 600
    color #fff
    background-color maincolor
    &:hover
      cursor pointer
      color maincolor
      background-color #fff
  &__name
    flex-grow 2
  &__contacts
    flex-grow 8
  &__descr
    width 50%
  &__item
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 30px;
  &__itemlight
    background lightcolor
  &__image
    margin 5px 10px 5px 5px
    width 60px
    height 60px
    background-color maincolor
  &__quant
    flex-grow 1
    min-width 80px
    align-items center


#delete
  width 30px
  height 30px
  position absolute
  right 0
  &:hover
    cursor pointer
#add
  -webkit-touch-callout: none;
  -webkit-user-select: none; /* Webkit */
  -moz-user-select: none;    /* Firefox */
  -ms-user-select: none;     /* IE 10  */
  -o-user-select: none;
  user-select: none;  
  font-size 30px
  width 30px
  height 30px
  margin 10px
  line-height 1
  text-align center
  font-family Arial
  color maincolor
  border solid maincolor 2px
  border-radius 50%
  &:hover
    cursor pointer

#select
  height 30px
  width 100%
  margin 12px auto
  border solid orange 2px

#amount
  width 50px
  text-align center

#less, #more
  -webkit-touch-callout: none;
  -webkit-user-select: none; /* Webkit */
  -moz-user-select: none;    /* Firefox */
  -ms-user-select: none;     /* IE 10  */
  -o-user-select: none;
  user-select: none;  
  font-size 20px
  font-weight 600
  font-family Arial
  padding 5px
  &:hover
    cursor pointer

#confirm
  padding-left: 20px

#toorder
  position sticky
.error
  background-color #fcc
.ok
  background-color #bbFF88
.nojs
  display none !important