{
  "env": {
    "node": true,
    "es6": true
  },
  
  "extends": "eslint:recommended",
  
  "parserOptions": {
    "ecmaVersion": 2015
  },
  
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": 0,
    "no-console": 0,
    "no-constant-condition": 0
  }
}
